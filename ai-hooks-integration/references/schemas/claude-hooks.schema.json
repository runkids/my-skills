{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code hooks",
  "description": "Schema for Claude Code hooks configuration",
  "type": "object",
  "definitions": {
    "hookCommand": {
      "type": "object",
      "properties": {
        "type": {"type": "string", "enum": ["command", "prompt"]},
        "command": {"type": "string"},
        "prompt": {"type": "string"},
        "timeout": {"type": "number"}
      },
      "required": ["type"]
    },
    "hookEntryWithMatcher": {
      "type": "object",
      "properties": {
        "matcher": {"type": "string", "description": "Pattern to match tool names (e.g., 'Bash', 'Write|Edit', '*')"},
        "hooks": {
          "type": "array",
          "items": {"$ref": "#/definitions/hookCommand"}
        }
      },
      "required": ["hooks"]
    },
    "hookEntryWithoutMatcher": {
      "type": "object",
      "properties": {
        "hooks": {
          "type": "array",
          "items": {"$ref": "#/definitions/hookCommand"}
        }
      },
      "required": ["hooks"]
    }
  },
  "properties": {
    "hooks": {
      "type": "object",
      "properties": {
        "PreToolUse": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithMatcher"}},
        "PostToolUse": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithMatcher"}},
        "PermissionRequest": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithMatcher"}},
        "SessionStart": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithoutMatcher"}},
        "SessionEnd": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithoutMatcher"}},
        "UserPromptSubmit": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithoutMatcher"}},
        "Stop": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithoutMatcher"}},
        "SubagentStop": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithoutMatcher"}},
        "PreCompact": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithoutMatcher"}},
        "Notification": {"type": "array", "items": {"$ref": "#/definitions/hookEntryWithMatcher"}}
      }
    }
  }
}
