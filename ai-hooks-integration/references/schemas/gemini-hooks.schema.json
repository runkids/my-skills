{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gemini CLI hooks configuration",
  "description": "Schema for ~/.gemini/settings.json hooks section",
  "type": "object",
  "properties": {
    "hooks": {
      "type": "object",
      "description": "Hook event configurations",
      "properties": {
        "SessionStart": { "$ref": "#/$defs/hookArray" },
        "SessionEnd": { "$ref": "#/$defs/hookArray" },
        "BeforeAgent": { "$ref": "#/$defs/hookArray" },
        "AfterAgent": { "$ref": "#/$defs/hookArray" },
        "BeforeModel": { "$ref": "#/$defs/hookArray" },
        "AfterModel": { "$ref": "#/$defs/hookArray" },
        "BeforeToolSelection": { "$ref": "#/$defs/hookArray" },
        "BeforeTool": { "$ref": "#/$defs/hookArray" },
        "AfterTool": { "$ref": "#/$defs/hookArray" },
        "PreCompress": { "$ref": "#/$defs/hookArray" },
        "Notification": { "$ref": "#/$defs/hookArray" }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "hookArray": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "matcher": {
            "type": "string",
            "description": "Regex for tool events, exact string for lifecycle. '*' or '' matches all."
          },
          "hooks": {
            "type": "array",
            "items": { "$ref": "#/$defs/hookEntry" }
          }
        },
        "required": ["hooks"]
      }
    },
    "hookEntry": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["command"],
          "description": "Execution engine (only 'command' supported)"
        },
        "command": {
          "type": "string",
          "description": "Shell command. Supports $GEMINI_PROJECT_DIR, $GEMINI_CWD, $GEMINI_SESSION_ID"
        },
        "name": {
          "type": "string",
          "description": "Friendly name for logs and /hooks CLI"
        },
        "timeout": {
          "type": "number",
          "default": 60000,
          "description": "Timeout in milliseconds"
        },
        "description": {
          "type": "string",
          "description": "Brief explanation of hook purpose"
        }
      },
      "required": ["type", "command"]
    }
  }
}
